{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "lingo-caster",
  "version": "1.0.0",
  "title": "LingoCaster",
  "description": "Elegant translation tool for raycast, same of Alfred YoudaoTranslator",
  "icon": "command-icon.png",
  "author": "zthxxx",
  "license": "MIT",
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "lint": "eslint --format codeframe --ext .ts,.tsx src",
    "lint:fix": "eslint --format codeframe --ext .ts,.tsx src --fix",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest --passWithNoTests",
    "publish": "ray publish"
  },
  "dependencies": {
    "@raycast/api": "^1.55.1",
    "change-case": "4.1.2",
    "dedent": "1.0.1",
    "execa": "7.1.1",
    "got": "^12.6.0",
    "nanoid": "4.0.2",
    "rxjs": "7.8.1",
    "string-width": "6.1.0",
    "super-expressive": "2.0.0",
    "ts-pattern": "5.0.1"
  },
  "devDependencies": {
    "@antfu/eslint-config": "0.39.7",
    "@antfu/eslint-config-react": "0.39.7",
    "@raycast/eslint-config": "1.0.6",
    "@types/dedent": "0.7.0",
    "@types/jest": "29.5.3",
    "@types/node": "20.4.1",
    "@types/react": "18.2.14",
    "@zthxxx/tsconfig": "1.0.2",
    "dotenv": "16.3.1",
    "eslint": "8.44.0",
    "eslint-formatter-codeframe": "7.32.1",
    "jest": "29.6.1",
    "prettier": "3.0.0",
    "ts-jest": "29.1.1",
    "ts-node": "10.9.1",
    "type-fest": "3.13.0",
    "typescript": "5.1.6"
  },
  "commands": [
    {
      "name": "translate",
      "title": "Translate",
      "description": "Elegant translation tool",
      "mode": "view",
      "arguments": [
        {
          "name": "queryText",
          "placeholder": "Query",
          "type": "text",
          "required": false
        }
      ]
    },
    {
      "name": "translate-selection",
      "title": "Translate with Select",
      "description": "Translation with selection or clipboard text",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "title": "Translator Platform App",
      "name": "APP_PLATFORM",
      "description": "Select your translator platform app",
      "type": "dropdown",
      "required": true,
      "default": "Youdao",
      "data": [
        {
          "title": "Youdao",
          "value": "Youdao"
        }
      ]
    },
    {
      "title": "App Auth Key",
      "name": "APP_KEY",
      "description": "Your Translate App Auth Key",
      "type": "textfield",
      "required": true
    },
    {
      "title": "App Secret Key",
      "name": "APP_SECRET",
      "description": "Your Translate App Secret Key",
      "type": "textfield",
      "required": true
    }
  ]
}
