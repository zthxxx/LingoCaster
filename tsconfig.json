{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@zthxxx/tsconfig/tsconfig.json",
  "display": "Node 16",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "baseUrl": ".",
    "target": "ES2022",

    "moduleResolution": "Node",
    "resolvePackageJsonExports": false,

    "types": [
      "node",
      "jest",
    ],
  },
  "include": [
    "src",
  ],
}
